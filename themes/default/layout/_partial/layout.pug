doctype html
html(lang=config.language)
  head
    if page.title
      title=page.title + " — " + config.subtitle + " — " + config.title
    else
      title=config.subtitle + " — " + config.title
    meta(charset="utf-8")/
    meta(name="viewport" content="width=device-width, initial-scale=1")/

    //- Favicons
    link(rel="apple-touch-icon", sizes="180x180", href=config.root + "apple-touch-icon.png")/
    link(rel="icon", type="image/png", href=config.root + "favicon-32x32.png", sizes="32x32")/
    link(rel="icon", type="image/png", href=config.root + "android-chrome-192x192.png", sizes="192x192")/
    link(rel="icon", type="image/png", href=config.root + "favicon-16x16.png", sizes="16x16")/
    link(rel="manifest", href=config.root + "manifest.json")/
    link(rel="mask-icon", href=config.root + "safari-pinned-tab.svg", color="#000000")/
    meta(name="apple-mobile-web-app-title", content="podabed.org")/
    meta(name="application-name", content="podabed.org")/
    meta(name="msapplication-TileColor", content="#ffffff")/
    meta(name="msapplication-TileImage", content=config.root + "mstile-144x144.png")/
    meta(name="theme-color", content="#ffffff")/

    //- CSS
    link(rel="stylesheet", href=config.root + "css/normalize.css")/
    link(rel="stylesheet", href=config.root + "css/default.css")/

    //- JS
    script(src="https://use.fontawesome.com/62139f3943.js" async)
    script(src=config.root + "js/disqus.js" async)
    script(src=config.root + "js/google-analytics.js" async)

  body
    header(class="header")
      nav(class="nav")
        each i, index in config.nav
          a(class="nav__item" href=url_for(i))=index
    main(class="content")
      block content
    footer(class="footer")
      div(class="copyright")="© 2013‐" + date(Date.now(), "YYYY") + " Дмитрий Подабед"
      address(class="address-links")
        a(class="address-links__item" href="mailto://dmitrij@podabed.org")
          i(class="fa fa-envelope" aria-hidden="true")
        a(class="address-links__item" href="tg://resolve?domain=podabed")
          i(class="fa fa-telegram" aria-hidden="true")
        a(class="address-links__item" href="https://fb.me/podabed")
          i(class="fa fa-facebook-official" aria-hidden="true")
        a(class="address-links__item" href="https://vk.com/podabed")
          i(class="fa fa-vk" aria-hidden="true")
        a(class="address-links__item" href="https://instagram.com/podabed")
          i(class="fa fa-instagram" aria-hidden="true")
        a(class="address-links__item" href="https://tumblr.com/blog/podabed")
          i(class="fa fa-tumblr" aria-hidden="true")
        a(class="address-links__item" href="https://couchsurfing.com/people/podabed")
          i(class="fa fa-bed" aria-hidden="true")
        a(class="address-links__item" href="https://bewelcome.org/podabed")
          i(class="fa fa-suitcase" aria-hidden="true")
        a(class="address-links__item" href="https://pinterest.com/podabed")
          i(class="fa fa-pinterest" aria-hidden="true")
        a(class="address-links__item" href="https://plus.google.com.com/107579133326171057193")
          i(class="fa fa-google-plus-official" aria-hidden="true")