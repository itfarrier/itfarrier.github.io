.post-title
  padding-top 1em
  font-size 2rem
  text-align center

.post
  font-family $serif
  font-size 1.5rem
  line-height 1.5

.post-title__time
  font-family $serif
  text-align center
  width 100%

.post-title__title
  font-family $sans-serif
  font-weight 700

.post-title__title:before
  content " â‡’ "

.post-title__title_header:before
  content ""


.post-title > a:link
.post-title > a:visited
  text-decoration none
  border-bottom-style dotted
  border-bottom-width 1px
  color black

.post-title > a:hover
  border-bottom-style solid
  border-bottom-width 1px
  color black

img
  max-width 100%

blockquote
  border-left-style solid
  border-left-width .5rem
  border-left-color #afafaf
  padding-left 2rem
  padding-top .2rem
  padding-bottom .2rem
  margin-top .5rem
  margin-bottom .5rem