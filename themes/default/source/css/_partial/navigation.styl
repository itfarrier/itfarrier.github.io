.nav
  display flex
  justify-content center
  flex-wrap wrap

.nav__item
  margin-top 1.1rem
  margin-left .5rem
  margin-right .5rem
  font-family $sans-serif
  font-weight 700
  font-size 1.5rem

.nav__item:link
.nav__item:visited
  text-decoration none
  border-bottom-style dotted
  border-bottom-width 1px
  color black

.nav__item:hover
  border-bottom-style solid
  border-bottom-width 1px
  color black