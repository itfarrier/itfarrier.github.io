{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      // NOTE: duplication from gatbsy-config.js for working types
      "cmpts/*": ["src/components/*"],
      "docs/*": ["src/assets/documents/*"],
      "imgs/*": ["src/assets/images/*"],
      "root/*": ["./*"],
      "src/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "./src/graphql/__generated__/schema.json",
        "tag": "gql"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ESNext",
    "watch": true
  },
  "exclude": [
    "*.config.js",
    ".cache",
    ".idea",
    ".jest",
    "coverage",
    "node_modules",
    "public",
    "static"
  ],
  "include": ["src"]
}
